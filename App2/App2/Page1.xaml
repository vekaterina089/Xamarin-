<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App2.Page1">
    <StackLayout Padding="20">
        <Label Text="Введите количество:" />
        <Entry x:Name="quantityEntry" Placeholder="Количество" Keyboard="Numeric" />
        <Label Text="Введите причину списания:" />
        <Entry x:Name="reasonEntry" Placeholder="Причина списания" />
        <StackLayout Orientation="Horizontal" HorizontalOptions="End">
            <Button Text="Списать" Clicked="OnSubmitClicked" />
            <Button Text="Отмена" Clicked="OnCancelClicked" />
        </StackLayout>
    </StackLayout>
</ContentPage>
